@using VideoGamesManager.Dbo
@model List<VideoGame>

<h2>Select games to restock:</h2>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th:first-child, td:first-child {
        text-align: left;
    }

    th:last-child, td:last-child {
        border-right: none;
    }

    tbody tr:last-child td {
        border-bottom: none;
    }

    .increment {
        padding: 5px 10px;
        border: none;
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
    }
</style>

<form method="post" action="/Stock/Confirm">
    <table>
        <thead>
            <tr>
                <th>Game</th>
                <th>Min Age</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Min_age</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Stock</td>
                    <td>@Model[i].Price</td>
                    <td>
                        <button type="button" class="increment" data-game-id="@Model[i].Id">+</button>
                        <input type="input" id="quantity-@Model[i].Id" name="quantity" value="0" />
                        <input type="hidden" name="gameId" value="@Model[i].Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit">Confirm Purchase</button>
</form>