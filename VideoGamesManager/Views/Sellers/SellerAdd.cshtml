@model VideoGamesManager.Dbo.User

@{
    ViewData["Title"] = "Gestion des utilisateurs";
}

<h2>Gestion des utilisateurs</h2>

<div class="box">
    <h3>Ajouter/Modifier un utilisateur</h3>

    <form asp-controller="Utilisateurs" asp-action="SaveUtilisateur" method="post">
        <div class="form-group">
            <label>Nom :</label>
            <input type="text" class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <label>Mot de passe :</label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <label>Email :</label>
            <input type="password" class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <label>Numero de téléphone :</label>
            <input type="password" class="form-control" asp-for="PhoneNumber" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="Role" />
            <label class="form-check-label">Admin</label>
        </div>

        <div class="btn-group" role="group" aria-label="Actions">
            <button type="submit" class="btn btn-primary">Ajouter</button>
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("EditUtilisateur", "Utilisateurs")'">Modifier</button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteUtilisateur", "Utilisateurs")'">Supprimer</button>
        </div>
    </form>
</div>

