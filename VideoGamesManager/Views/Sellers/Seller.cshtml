@model VideoGamesManager.Models.SellersViewModel

@{
    ViewData["Title"] = "Gestion des utilisateurs";
}

<h2>Gestion des vendeurs</h2>

<div class="box">

    <form asp-controller="Utilisateurs" method="post">
        <div class="form-group">
            <label>Nom :</label>
            <input type="text" class="form-control" asp-for="Seller.Username" />
        </div>
        <div class="form-group">
            <label>Mot de passe :</label>
            <input type="password" class="form-control" asp-for="Seller.Password" />
        </div>
        <div class="form-group">
            <label>Email :</label>
            <input type="email" class="form-control" asp-for="Seller.Email" />
        </div>
        <div class="form-group">
            <label>Numéro de téléphone :</label>
            <input type="tel" class="form-control" asp-for="Seller.PhoneNumber" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="Seller.Role" />
            <label class="form-check-label">Admin</label>
        </div>

        <div class="btn-group" role="group" aria-label="Actions">
            <button type="submit" class="btn btn-primary" asp-controller="Sellers" asp-action="SellerAdd">Ajouter</button>
            <button type="button" class="btn btn-warning" asp-controller="Sellers" asp-action="SellerModify">Modifier</button>
            <button type="button" class="btn btn-danger" asp-controller="Sellers" asp-action="SellerDelete">Supprimer</button>
        </div>
    </form>
</div>

<h3>Liste des vendeurs :</h3>
<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model.Sellers)
        {
            <tr>
                <td>@seller.Username</td>
                <td>@seller.Email</td>
                <td>@seller.PhoneNumber</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-warning" asp-controller="Sellers" asp-action="SellerEdit" >Modifier</a>
                        <a class="btn btn-danger" asp-controller="Sellers" asp-action="SellerDelete" >Supprimer</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>